---
import Title from "@/components/ui/Title.astro";
import Logo from "@/assets/icons/competitors/logo.svg";
import type { PageComponent } from "@/pages.types";
import Divider from "@/components/ui/Divider.astro";
import FeatureRowValue from "./FeatureRowValue.astro";

interface Props {
	component: PageComponent;
}

const { component } = Astro.props;

const data = component?.pageable as {
	title: string;
	description: string;
};
---

<div class="site-container">
	<Divider size="small" />

	<div class="text-component mx-auto lg:w-[70%]">
		<Title type="h3">
			{data.title}
		</Title>

		<div class="text-k-xl text-neutral-40 mt-6" set:html={data.description} />
	</div>
</div>

<style is:global>
	.text-component * {
		line-height: 36px !important;
	}

	.text-component h3 {
		line-height: 50px !important;
	}

	.text-component p {
		margin-bottom: 30px;
	}

	.text-component ul {
		margin: 20px 0px;
	}

	.text-component li {
		background: url(/icons/check-icon.svg) no-repeat 0 0;
		padding-left: 35px;
		position: relative;
	}
</style>

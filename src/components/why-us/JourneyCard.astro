---
import CircleIcon from "@/assets/icons/why-us/circle.svg";

type Props = {
	spacing?: boolean;
};

const { spacing = false } = Astro.props;
---

<div class="flex flex-col lg:flex-row">
	<div
		class:list={[
			"border-dark-blue relative w-[280px] border-l pl-6 lg:mr-15 lg:pl-0",
			{ "pt-8 lg:pt-30": spacing },
		]}
	>
		<span
			class="bg-gradient-to-b from-[#6699ff] to-[#172780] bg-clip-text text-[64px] font-light text-transparent lg:text-[120px]"
			style="letter-spacing: -4.8px"
		>
			<slot name="year" />

			<CircleIcon
				class:list={[
					"absolute -left-2.5 block lg:hidden",
					{ "top-[50%]": !spacing },
					{ "top-[56%]": spacing },
				]}
			/>
		</span>
	</div>
	<div
		class:list={[
			"border-dark-blue relative flex grow flex-col border-l pl-6 lg:pl-15",
			{ "lg:pt-30": spacing },
		]}
	>
		<slot name="content" />

		<CircleIcon
			class:list={[
				"absolute hidden lg:block",
				{ "top-[20%] -left-2.5": !spacing },
				{ "top-[200px] -left-2.5": spacing },
			]}
		/>
	</div>
</div>

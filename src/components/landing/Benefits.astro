---
import type { AstroComponentFactory } from "astro";
import TimeIcon from "@/assets/icons/benefits/time.svg";
import SaveMoneyIcon from "@/assets/icons/benefits/save-money.svg";
import QualityWorkIcon from "@/assets/icons/benefits/get-quality.svg";
import RiskFreeIcon from "@/assets/icons/benefits/risk-free.svg";
import ProfessionalIcon from "@/assets/icons/benefits/professional.svg";
import CancelAnytimeIcon from "@/assets/icons/benefits/cancel-anytime.svg";
import UnlimitedEditsIcon from "@/assets/icons/benefits/unlimited.svg";
import DesignIcon from "@/assets/icons/benefits/design.svg";
import Title from "@/components/ui/Title.astro";
import Divider from "../ui/Divider.astro";
import DarkTimeIcon from "@/assets/icons/benefits/dark-save-time.svg";
import DarkSaveMoneyIcon from "@/assets/icons/benefits/dark-save-money.svg";
import DarkQualityWorkIcon from "@/assets/icons/benefits/dark-get-quality.svg";
import DarkRiskFreeIcon from "@/assets/icons/benefits/dark-risk-free.svg";
import DarkProfessionalIcon from "@/assets/icons/benefits/dark-professionals.svg";
import DarkCancelAnytimeIcon from "@/assets/icons/benefits/dark-cancel-anytime.svg";
import DarkUnlimitedEditsIcon from "@/assets/icons/benefits/dark-unlimited.svg";
import DarkDesignIcon from "@/assets/icons/benefits/dark-industry-experts.svg";

interface Props {
	theme?: "light" | "dark";
}

type IBenefits = Array<{
	title: string;
	description: string;
	icon: AstroComponentFactory;
}>;

const benefits: IBenefits = [
	{
		title: "Save Time",
		description: "Delegate any design task in 5 minutes and get it back in 12 to 48 hours.",
		icon: TimeIcon,
		darkIcon: DarkTimeIcon,
	},
	{
		title: "Save Money",
		description: "Our plans starts at $349/m. No more breaking the bank.",
		icon: SaveMoneyIcon,
		darkIcon: DarkSaveMoneyIcon,
	},
	{
		title: "Get Quality Work",
		description: "Whether you need a simple logo or a complex illustration, weâ€™ll get it done.",
		icon: QualityWorkIcon,
		darkIcon: DarkQualityWorkIcon,
	},
	{
		title: "Risk-Free",
		description: "Enjoy a complimentary 15-day trial on us, no strings attached.",
		icon: RiskFreeIcon,
		darkIcon: DarkRiskFreeIcon,
	},
	{
		title: "Work With Professional",
		description: "Stop wasting time with freelancers that leave you hanging.",
		icon: ProfessionalIcon,
		darkIcon: DarkProfessionalIcon,
	},
	{
		title: "Cancel Anytime",
		description: "No lock-in contracts. Go month-to-month, and cancel whenever you want.",
		icon: CancelAnytimeIcon,
		darkIcon: DarkCancelAnytimeIcon,
	},
	{
		title: "Unlimited Edits",
		description: "There's no limit to how many open projects you can have at the same time.",
		icon: UnlimitedEditsIcon,
		darkIcon: DarkUnlimitedEditsIcon,
	},
	{
		title: "Industry Experts",
		description: "Whatever your niche, we have a graphic designer with the expertise to help.",
		icon: DesignIcon,
		darkIcon: DarkDesignIcon,
	},
];

const { theme = "light" } = Astro.props;
---

<section class="site-container" data-theme={theme}>
	<Title type="h1" class="lg:w-[70%] dark:text-neutral-100">
		Benefits of your graphic design subscription
	</Title>

	<Divider size="large" />

	<div class="grid grid-cols-2 gap-x-14 gap-y-20 md:grid-cols-3 lg:grid-cols-4">
		{
			benefits.map((benefit) => (
				<div class=" ">
					<div class="flex">
						<span class="dark:bg-dark-blue bg-light-blue border-blue rounded-md border p-4 shadow-[24px_28px_24px_0px_rgba(11,15,41,0.06),12px_12px_16px_0px_rgba(11,15,41,0.08),3px_3px_8px_0px_rgba(11,15,41,0.08)] dark:border-b dark:border-t-transparent dark:border-r-transparent dark:border-l-transparent dark:shadow-[24px_28px_24px_0px_rgba(11,15,41,0.06),_12px_12px_16px_0px_rgba(11,15,41,0.08),_3px_3px_8px_0px_rgba(11,15,41,0.08)]">
							{theme === "dark" ? <benefit.darkIcon /> : <benefit.icon />}
						</span>
					</div>
					<div class="mt-6">
						<Title type="h6" class="dark:text-neutral-100">
							{benefit.title}
						</Title>
						<p class="text-k-md text-neutral-40 dark:text-neutral-80 mt-2">{benefit.description}</p>
					</div>
				</div>
			))
		}
	</div>
</section>

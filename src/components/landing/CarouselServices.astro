---
import ServiceItem from "@/components/landing/services/ServiceItem.astro";
import { firstServicesRow, secondServicesRow } from "@/data/services.js";
import InfinitePillsCarousel from "@/components/ui/services/InfinitePillsCarousel.tsx";
---

<div class="mt-20">
	<div class="flex flex-wrap justify-center gap-x-4 gap-y-10">
		<InfinitePillsCarousel client:only="preact" items={firstServicesRow} />
	</div>
</div>

<div class="my-20">
	<div class="flex flex-wrap justify-center gap-x-4 gap-y-10">
		<InfinitePillsCarousel client:only="preact" items={secondServicesRow} reversed={true} />
	</div>
</div>

---
import NoContractsIcon from "@/assets/icons/trust-badgeds/no-contracts.svg";
import ALotOfClientsIcon from "@/assets/icons/trust-badgeds/a-lot-of-clients.svg";
import MoneyBackIcon from "@/assets/icons/trust-badgeds/money-back.svg";
---

<div
	class="site-container text-neutral-40 space-between mx-auto flex flex-col items-center justify-between space-y-4 space-x-10 border-t border-[rgba(24,29,41,0.10)] pt-6 lg:w-[70%] lg:flex-row lg:space-y-0"
>
	<div class="flex items-center space-x-1">
		<NoContractsIcon />
		<span>Cancel at any time</span>
	</div>
	<div class="flex items-center space-x-1">
		<ALotOfClientsIcon />
		<span>Over 4000 clients served</span>
	</div>
	<div class="flex items-center space-x-1">
		<MoneyBackIcon />
		<span>30 day money back guarantee</span>
	</div>
</div>

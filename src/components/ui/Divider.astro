---
type ISize = "medium" | "almost-large" | "large" | "extra-large" | "super-large";

interface Props {
	size: ISize;
}

const { size = "medium" } = Astro.props;

const getDividerClasses = (size: string): string => {
	if (size == "super-large") {
		return "h-60"; // 240px
	}

	if (size == "extra-large") {
		return "h-50"; // 200px
	}

	if (size == "large") {
		return "h-30"; // 120px
	}

	if (size == "almost-large") {
		return "h-25"; // 100px
	}

	return "h-20"; // 80px
};

const classes = getDividerClasses(size);
---

<div class={classes}></div>

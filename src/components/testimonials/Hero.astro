---
import ArrowRightUp from "@/assets/icons/arrow-right-up.svg";
import Title from "@/components/ui/Title.astro";
import OurClients from "@/components/landing/OurClients.astro";
import Divider from "@/components/ui/Divider.astro";
import { PRICING_URL } from "@/constants/app";

import AaronDuncanImage from "@/assets/images/testimonials/aaron-duncan.webp?url";
import AngelaMurphyImage from "@/assets/images/testimonials/angela-murphy.webp?url";
import CynthiaMurphyImage from "@/assets/images/testimonials/cynthia-murphy.webp?url";
import JamesCarbaryImage from "@/assets/images/testimonials/james-carbary.webp?url";
import KeiraSpencerImage from "@/assets/images/testimonials/keira-spencer.webp?url";
import RyanUnderwoodImage from "@/assets/images/testimonials/ryan-underwood.webp?url";
import { PRICING_URL } from "../../constants/app";

const people = [
	{
		name: "Aaron Duncan",
		image: AaronDuncanImage,
		styles: "absolute lg:top-[5%] lg:left-[35%] left-[30%]",
		hiddenMobile: false
	},
	{
		name: "Cynthia Murphy",
		image: CynthiaMurphyImage,
		styles: "absolute lg:top-[5%] lg:left-[55%] left-[60%]",
		hiddenMobile: false
	},
	{
		name: "James Carbary",
		image: JamesCarbaryImage,
		styles: "absolute lg:top-[25%] lg:left-[72%] top-[15%] left-[1%]",
		hiddenMobile: false
	},
	{
		name: "Keira Spencer",
		image: KeiraSpencerImage,
		styles: "absolute lg:top-[25%] lg:left-[18%] top-[15%] left-[88%]",
		hiddenMobile: false
	},
	{
		name: "Angela Murphy",
		image: AngelaMurphyImage,
		styles: "absolute lg:top-[60%] lg:left-[89%]",
		hiddenMobile: true
	},
	{
		name: "Ryan Underwood",
		image: RyanUnderwoodImage,
		styles: "absolute lg:top-[60%] lg:left-[1%]",
		hiddenMobile: true
	}
];
---

<section class="site-container text-neutral-10 relative overflow-hidden">
	<Divider size="small" />

	<div class="relative mx-auto h-[300px] max-w-[90%]">
		{
			people.map((person) => (
				<div class:list={[person.styles, { "hidden md:block": person.hiddenMobile }]}>
					<img
						src={person.image}
						alt={person.name}
						class="rounded-ful w-[60px] max-w-[100px] rounded-full border-2 border-white object-cover shadow-lg lg:w-[120px]"
					/>
				</div>
			))
		}
	</div>

	<!-- Main content container -->
	<div
		class="relative z-10 mx-auto -mt-[170px] pb-[64px] text-center lg:-mt-[100px] lg:max-w-[90%]"
	>
		<!-- Badge -->
		<div
			class="text-k-sm text-neutral-40 border-blue mb-4 inline-flex items-center gap-x-1 rounded-[100px] border px-4 py-1"
		>
			12 years helping people like you
			<ArrowRightUp />
		</div>

		<div class="mx-auto space-y-4 lg:w-[70%]">
			<Title type="h1">Trusted by leaders who value speed and design</Title>

			<div class="text-k-lg text-neutral-40 mx-auto max-w-[80%]">
				See why professionals choose our unlimited design service to grow without limits.
			</div>

			<div class="mt-8 flex justify-center">
				<a class="button-primary" href={PRICING_URL}>Start with a free 15 day trial</a>
			</div>
		</div>
	</div>

	<div class="relative z-10">
		<OurClients />
	</div>
</section>

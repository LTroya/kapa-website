---
import Divider from "@/components/ui/Divider.astro";
import OurClients from "@/components/landing/OurClients.astro";

import DiscountIcon from "@/assets/icons/pricing/discount.svg";
import MoneyBackIcon from "@/assets/icons/trust-badgeds/money-back.svg";
---

<div>
	<div
		class="text-neutral-40 mx-auto flex w-[95%] flex-col items-center justify-center gap-y-6 md:flex-row md:gap-x-10 md:gap-y-4 lg:w-[70%]"
	>
		<div class="flex items-center space-x-1">
			<DiscountIcon />
			<span>Try us free for 15 days</span>
		</div>
		<div class="flex items-center space-x-1">
			<MoneyBackIcon />
			<span>30 day money back guarantee</span>
		</div>
	</div>

	<Divider size="medium" />

	<OurClients />
</div>

---
import Divider from "@/components/ui/Divider.astro";
import OurClients from "@/components/landing/OurClients.astro";

import DiscountIcon from "@/assets/icons/pricing/discount.svg";
import MoneyBackIcon from "@/assets/icons/trust-badgeds/money-back.svg";
---

<div>
	<div
		class="text-neutral-40 space-between mx-auto flex w-[95%] flex-col items-center justify-center space-y-4 space-x-10 lg:w-[70%] lg:flex-row lg:space-y-0"
	>
		<div class="flex items-center space-x-1">
			<DiscountIcon />
			<span>Kick the tires for free for 15 days</span>
		</div>
		<div class="flex items-center space-x-1">
			<MoneyBackIcon />
			<span>30 day money back guarantee</span>
		</div>
	</div>

	<Divider size="medium" />

	<OurClients />
</div>
